<table>
    <unit>    
        <sequence editable_state="true" name="'start'" triggable="true">
            <body enabled="true" name="'diamond_body'"/>
            <object    enabled="true"    name="'diamond'"/>
        </sequence>
        <sequence editable_state="true" name="'interact'" triggable="true">
            <run_sequence name="'diamond_pressed'"/>
        </sequence>
        <sequence editable_state="true" name="'diamond_pressed'" triggable="true">
            <body enabled="false" name="'diamond_body'"/>
            <object    enabled="false"    name="'diamond'"/>
        </sequence>
        <sequence name="'enable_interact'" triggable="true">
            <interaction enabled="true"/>
        </sequence>
        <sequence name="'disable_interact'" triggable="true">
            <interaction enabled="false"/>
        </sequence>
    </unit>
</table>